<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    android:background="#BCAAA4"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/img_sign_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="15">

            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="15"-->
            <!--                -->
            <!--                android:src="@drawable/img_sign_up"/>-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="3"-->
            <!--                android:text="@string/app_name"-->
            <!--                android:textSize="50dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:fontFamily="serif"-->
            <!--                android:textStyle="italic"-->
            <!--                android:textColor="@android:color/black"/>-->

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/register_screen_cards_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="20"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fullName_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="FullName"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_name_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>



            <EditText
                android:id="@+id/email_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_email_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>


            <EditText
                android:id="@+id/password_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_password_sign_up"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/button_background"/>

            <TextView
                android:id="@+id/signIn_link"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Don't have an account? signUp here"
                android:layout_marginTop="6dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>